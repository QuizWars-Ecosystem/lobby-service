{{define "lobby_modal"}}
    <div id="lobbyModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="window.lobbyManager.closeModal()">&times;</span>
            <div id="lobbyModalContent" class="modal-body"></div>
        </div>
    </div>

    <style>
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.7);
        }

        .modal-content {
            background-color: #fff;
            margin: 50px auto;
            padding: 20px;
            width: 80%;
            max-width: 800px;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        }

        .close {
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
            color: #aaa;
        }

        .lobby-info {
            margin: 15px 0;
        }
    </style>
{{end}}